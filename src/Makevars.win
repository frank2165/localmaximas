CXX_STD = CXX11

VERSION = 2.2.3
COMPILED_BY ?= gcc-4.6.3
RWINLIB = ../windows/gdal2-$(VERSION)
ANNLIB = ANN
TARGET = lib$(subst gcc,,$(COMPILED_BY))$(R_ARCH)

PKG_CPPFLAGS =\
  -I$(RWINLIB)/include/gdal \
  -I$(RWINLIB)/include/geos \
  -I$(RWINLIB)/include/proj \
  -I$(ANNLIB)

PKG_LIBS = \
  -L$(RWINLIB)/$(TARGET) \
  -lgdal -lspatialite -lproj -lgeos_c -lgeos  \
  -ltiff -lgeotiff